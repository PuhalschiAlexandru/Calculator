<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activities.MainActivity">

    <TextView
        android:id="@+id/mDisplay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="end"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textCursorDrawable="@null"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduceti Numerele:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:rowOrderPreserved="true"
        android:layout_below="@+id/mDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/mBtn7"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="write7"
            android:text="7" />

        <Button
            android:id="@+id/mBtn8"


            android:layout_column="1"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/mBtn9"


            android:layout_column="2"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/mBtn4"

            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/mBtn5"

            android:layout_column="1"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/mBtn1"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/mBtn2"

            android:layout_column="1"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/mBtn3"

            android:layout_column="2"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/mBtnDot"
            android:layout_column="1"
            android:layout_row="3"
            android:text="." />

        <Button
            android:id="@+id/mBtnEqual"
            android:layout_column="2"
            android:layout_row="3"
            android:text="=" />

        <Button
            android:id="@+id/mBtn6"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/mBtn0"
            android:layout_column="0"
            android:layout_row="3"
            android:text="0" />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_alignTop="@+id/gridLayout">

        <Button
            android:id="@+id/mBtnClear"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="C" />
        <Button
            android:id="@+id/mBtnSub"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="-" />

        <Button
            android:id="@+id/mBtnMult"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="*" />

        <Button
            android:id="@+id/mBtnDiv"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="/" />

        <Button
            android:id="@+id/mBtnAdd"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="+" />


    </LinearLayout>


</RelativeLayout>
